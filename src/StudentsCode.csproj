<Project Sdk="Microsoft.NET.Sdk" InitialTargets="CopyFiles">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <DocumentationFile>'$(MSBuildProjectName).xml'</DocumentationFile>
  </PropertyGroup>

  

  <ItemGroup>
    <MySourceFiles Include="$(OutDir)\$(MSBuildProjectName).dll"/>
  </ItemGroup>


  <Target Name="CopyFiles">
     <Message Text="Copying output file: @(MySourceFiles) to: .\..\..\Unity\Assets" Importance="high"/>

    <Copy SourceFiles="@(MySourceFiles)" DestinationFolder=".\..\..\Unity\Assets" />
  </Target>

</Project>

<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <DocumentationFile>'$(MSBuildProjectName).xml'</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Common\src\Common.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <CopyDestinationPath>.\..\..\Unity\Library\ScriptAssemblies</CopyDestinationPath>
  </PropertyGroup>

  <Target Name="CopyFiles" AfterTargets="Build">
    <ItemGroup>
      <MySourceFiles Include="$(OutDir)\*.dll" />
    </ItemGroup>
    <Message Text="Changing read/write to file: $(CopyDestinationPath)\%(MySourceFiles.FileName).dll" Importance="High"/>
    <Exec Command="attrib -r $(CopyDestinationPath)\%(MySourceFiles.FileName).dll"/>
    <Message Text="Copying output file: @(MySourceFiles) to: $(CopyDestinationFiles)" Importance="High" />
    <Copy SourceFiles="@(MySourceFiles)" DestinationFolder=".\..\..\Unity\Library\ScriptAssemblies" />
    <Message Text="Changing read only to file: $(CopyDestinationPath)\%(MySourceFiles.FileName).dll" Importance="High"/>
    <Exec Command="attrib +r $(CopyDestinationPath)\%(MySourceFiles.FileName).dll"/> 
  </Target> 

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.3" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" />
    <AdditionalFiles Include="..\stylecop.json" />
  </ItemGroup>
</Project>